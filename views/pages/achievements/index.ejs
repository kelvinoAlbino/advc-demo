<% layout( '../.././layouts/default' ) -%>

<div class="courses-single">

  <div class="page-title" style="background-image: url('/images/'); ">

    <h2 class="text-center"><%= title %></h2>

  </div>

  <div class="container mt-4 mb-5">

    <div class="row justify-content-center">

      <div class="col-12">

        <h4 class="text-center pb-4">Your Badges</h4>

      </div>

      <% for ( var i = 0; i < achievements.length; i++){%>

        <% if ( achievements[i].collected) { %>

          <div class="col-6 col-sm-4 col-md-2 mb-4">

            <img src="/images/badges/<%= achievements[i].image %>" class="img-fluid mb-2" alt="<%= achievements[i].title %>">

            <p class="text-center"><%= achievements[i].title %></p>

          </div>

        <% } %>

      <%}%>

    </div>

  </div>

  <div class="fluid-container mt-5 bg-light pt-5 pb-4">

    <div class="container">

      <div class="row">

        <div class="col-12">

          <h4 class="text-center pb-4">Badges available for you to collect</h4>

        </div>

        <% for ( var i = 0; i < achievements.length; i++){%>

          <% if ( ! achievements[i].collected) { %>

            <div class="col-6 col-md-4 mb-4">

              <div class="card p-3">

                <div class="row">

                  <div class="col-sm-12 col-md-4">

                    <img src="/images/badges/<%= achievements[i].image %>" class="img-fluid mb-2 grayscale" alt="<%= achievements[i].title %>">

                  </div>

                  <div class="col-sm-12 col-md-8">

                    <p style="font-weight: 600;"><%= achievements[i].title %></p>

                    <p style="font-size: 12px;">Earn this badge by completing lorum ipsum lodor sit amet</p>

                    <p style="font-size: 12px; font-weight: 600;">1 Step required.</p></p>

                    <p style="font-size: 12px;">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p></p>

                  </div>

                </div>

              </div>

            </div>

          <% } %>

        <%}%>

      </div>

    </div>

  </div>

</div>