<% layout('../.././layouts/default') -%>

<div class="bg-light pb-4">

  <div class="hero-title" style="background-image: url('/images/members-dash-header.jpg');">

    <h2 class="text-center mb-0"><%= title %></h2>

  </div>

  <div class="container-fluid mb-5 bg-white">

    <div class="container p-4">

      <div class="row justify-content-center align-items-center">

        <div class="col-sm-12">

          <form action="">

            <h5>Search users</h5>

            <div class="form-group d-flex">

              <input type="text" class="form-control" style="border-bottom-right-radius: 0; border-top-right-radius: 0;">

              <button class="btn btn-primary" style="width: 180px; border-bottom-left-radius: 0; border-top-left-radius: 0;">Search Users</button>

            </div>

          </form>

        </div>

      </div>

    </div>

  </div>

  <div class="container mb-0">

    <div class="row justify-content-center align-items-center">

      <div class="col-12">

        <h2 class="mb-5 text-center">User interaction</h2>

      </div>

      <div class="col-6 col-sm-6 col-md-3 mb-4">

        <div class="d-flex justify-content-center align-items-center bg-white rounded-lg p-4 shadow" style="height: 254px;">

          <h5 class="text-center">Number of active users on system 61</h5>

        </div>

      </div>

      <div class="col-6 col-sm-6 col-md-3 mb-4">

        <div class="d-flex justify-content-center align-items-center bg-white rounded-lg p-4 shadow" style="height: 254px;">

          <h3 class="text-center green-text" style="font-size: 72px;">39<sup>%</sup><span style="font-size: 21px;display:block; color: black;">Stale users</span></h3>

        </div>

      </div>

      <div class="col-6 col-sm-6 col-md-3 mb-4">

        <div class="d-flex justify-content-center align-items-center bg-white rounded-lg p-4 shadow" style="height: 254px;">

          <h5 class="text-center">You have 16 new enrollments in 2020</h5>

        </div>

      </div>

      <div class="col-6 col-sm-6 col-md-3 mb-4">

        <div class="d-flex justify-content-center align-items-center bg-white rounded-lg p-4 shadow" style="height: 254px;">

          <canvas id="active-users" width="250" height="250"></canvas>

        </div>

      </div>

    </div>

  </div>

  <div class="container-fluid bg-light p-5">

    <div id="courses" class="container">

      <div class="row">

        <div class="col-12">

          <h2 class="mb-5 text-center">Active Cources</h2>

        </div>

        <% for (var i = 0; i < courses.length; i++) {%>

        <div class="course-item col-6 col-md-3">

          <a href="/courses/<%= courses[i].permalink %>">

            <div class="course-img" style="background-image: url('/images/<%= courses[i].course_thumbnail %>');"></div>

          </a>

          <h5 class="text-center mt-3"><%= courses[i].courseName %></h5>

        </div>

        <%}%>

      </div>

    </div>

  </div>

  <div class="container mt-3 mb-5">

